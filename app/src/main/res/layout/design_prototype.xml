<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutMainFrame"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:id="@+id/iconStatisTwoRow"
                android:layout_margin="2dp"
                android:background="@drawable/document_checked"
                android:layout_height="40dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:id="@+id/iconStatisOneRow"
                android:layout_margin="2dp"
                android:background="@drawable/document_checked"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/dataRowOne"
                android:layout_marginVertical="1dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/dataNumberLabel"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:text="№ "/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtDocNumber"
                    android:layout_toEndOf="@+id/dataNumberLabel"
                    android:textSize="15sp"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:text="1234567"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dataDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/txtDocNumber"
                    android:textSize="15sp"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:text="Дата"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/dataDateLabel"
                    android:textSize="15sp"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:text="2021-03-30"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/dataRowTwo"
                android:layout_marginVertical="1dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/dataOwnerLabel"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:text="Отразил "/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/dataOwnerLabel"
                    android:id="@+id/textOwner"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:text="nqkoi si"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/textOwner"
                    android:id="@+id/dataSkladLabel"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:text="Склад "/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/dataSkladLabel"
                    android:id="@+id/textSklad"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="2dp"
                    android:text="Склад "/>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>