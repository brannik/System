<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sundays"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editDocumentNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Въведете номер на бележка"
            android:inputType="number" />

        <Button
            android:id="@+id/btnNewDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnNewDocument" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnDelDocument" />

        <Button
            android:id="@+id/btnFindDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnFindDocument" />

        <Button
            android:id="@+id/btnListDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnListDocument" />

        <Button
            android:id="@+id/btnDocumentEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnDocumentEnter" />

        <ListView
            android:id="@+id/listDocuments"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>