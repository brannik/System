<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.System" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryVariant">@color/dark_1</item>
        <item name="colorOnPrimary">@color/dark_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#615E5E</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.System.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.System.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="Theme.System.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>