<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:id="@+id/notifyIcon"
        android:background="@drawable/notification_icon"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_height="40dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/notifyIcon"
        android:gravity="center"
        android:id="@+id/tvContact"
        android:background="@color/dark_2"
        android:textSize="18sp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_toStartOf="@id/btnDecline"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="asd"/>
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="40dp"
        android:id="@+id/btnAccept"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/darker"
        android:layout_alignParentEnd="true"
        app:cardElevation="6dp"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:layout_height="40dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:background="@drawable/icon_btn_accept"
            android:layout_height="match_parent"/>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="40dp"
        android:id="@+id/btnDecline"
        app:cardBackgroundColor="@color/darker"
        android:layout_margin="5dp"
        app:cardElevation="6dp"
        android:padding="2dp"
        android:layout_toStartOf="@id/btnAccept"
        android:layout_centerVertical="true"
        android:layout_height="40dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_btn_decline"/>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</RelativeLayout>