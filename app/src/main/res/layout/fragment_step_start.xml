<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_step_start">
        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/dark_2"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="30dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="@color/dark_2"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="24sp"
                    android:text="@string/welcome_text"
                    android:textColor="@color/text_color"
                    android:layout_above="@id/btnStepOneOk"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.SwitchCompat
                    android:background="@color/darker"
                    android:textColor="@color/text_color"
                    android:layout_margin="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Разбирам"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnStepOneOk"/>
            </RelativeLayout>
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</RelativeLayout>