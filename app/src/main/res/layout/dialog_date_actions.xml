<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/headerText"
        android:background="@color/darker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Изберете действие за дата"/>
    <TextView
        android:layout_below="@+id/headerText"
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:background="@color/dark_1"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        />
    <TextView
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/dateText"
        android:id="@+id/currVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:background="@color/dark_1"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/useLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/currVolume"
        android:text="Искаш ли да ползваш само част от времето? "
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.SwitchCompat
        android:layout_below="@id/useLabel"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:id="@+id/btnSwitch"
        android:text="Не"
        android:checked="false"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/carInvisibleFull"
        app:cardBackgroundColor="@color/dark_1"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnSwitch"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tempLabel"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:text="Избери количество"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/volumeEntered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@id/tempLabel"
                android:layout_marginVertical="15dp"
                android:textSize="25sp"
                android:textColor="@color/text_color"
                android:textAlignment="center"
                android:background="@color/dark_2"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <Button
        android:id="@+id/btnSaveChosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carInvisibleFull"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="Използвай"/>
</RelativeLayout>