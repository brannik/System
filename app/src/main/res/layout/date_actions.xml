<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"

    android:padding="10dp"
    android:background="@drawable/window_border"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/current_date_header"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:autoSizeTextType="uniform"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateTextSecondSh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="10dp"
                android:text="На тази дата втора смяна е:" />
            <Button
                android:id="@+id/btnSecondShift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заяви" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateTextRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="10dp"
                android:text="На тази дата почивка е: " />
            <Button
                android:id="@+id/btnRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заяви" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateTextSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="10dp"
                android:text="На тази дата неделя е:" />
            <Button
                android:id="@+id/btnSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заяви" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>